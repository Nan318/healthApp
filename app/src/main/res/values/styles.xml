<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/toolbar</item>
        <item name="android:textAllCaps">false</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/toolbar</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
    </style>
    <style name="MyMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- qol radio button theme. -->
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/radiobutton</item>
        <item name="colorControlActivated">@color/radiobutton</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/wvDateTxt</item>
    </style>
    <style name="MaterialCalendarDateTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@drawable/mcv_text_date_dark</item>
    </style>
    <style name="MaterialCalendarHeaderTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/dialog_blue</item>
    </style>

</resources>
